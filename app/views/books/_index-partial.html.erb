<tr>
       <td> <%= b.id %></td>
       <td> <%= b.title %></td>
       <td> <%= b.author%></td>
       <td> <%= b.user.username if b.user%></td>
       <td> <%= b.created_at%></td>
       <td> <%= b.rate%></td>

       <td> <%= link_to 'Display', book_path(b)%>
       <%if logged_in? %>
         |<%= link_to 'Add a review', new_book_review_path(b)%>
       <%end%>
       </td>
       <%if logged_in? && (current_user == b.user || is_Admin_user?)  %>
         <td> <%= link_to 'Edit', edit_book_path(b) %></td>
      <%end%>
         <%if is_Admin_user? %>
           <td> <%= link_to 'Delete' , book_path(b), method: :delete, data: {confirm: 'Are you suire you want to delete this book?'} %> </td>
       <%end%>
     </tr>