<h1> Show selected book</h1>
<br/>
<div style=" width: 30%; float:left">
  <h2>Book information</h2>
<table>
  <tr>
    <td>  Title:   </td>
    <td style="font-weight: bold;">  <%= @book.title%>  </td> <td></td>
  </tr>
  <tr>
    <td>  Author:   </td>
    <td style="font-weight: bold;">  <%= @book.author%>  </td>
  </tr>
  <tr>
    <td> created by:    </td>
    <td> <%= @book.user.username if @book.user%>   </td>
  </tr>
  <tr>
    <td> created at:  </td>
    <td>   <%= @book.created_at%>   </td>
  </tr>
  <tr>
    <td> modified at:  </td>
    <td>   <%= @book. updated_at%>   </td>
  </tr>
</table>

<p>
    <%if logged_in? %>
      <%= link_to 'Add e rewview', new_book_review_path(@book)%> |
    <%end%>
    <%if logged_in? && current_user == @book.user %>
      <%= link_to 'Edit this book', edit_book_path(@book)%> |
    <%end%>
<%= link_to 'Back to list of books', books_path%>
</p>

</div>

<div style=" width: 60%; float:right">
<h2>Reviews</h2>
<table>
  <tr>
    <th>Rate</th>
    <th>review</th>
  </tr>
  <% @book.reviews.each do |r| %>
  <tr>
    <td style="width: 10%; text-align:center;"><%=r.rate%> </td>
    <td style="width: 70%;"><%= r.review %></td>
      <%if logged_in? && current_user == r.user%>
        <td><%= link_to 'Edit', edit_book_review_path(r.book, r)  %></td>
        <td><%= link_to 'Delete', book_review_path(r.book, r),  method: :delete, data: {confirm: 'Are you suire you want to delete this book?'} %></td>
      <%else%>
      <td></td>
      <td></td>
     <%end%>

  </tr>
  <%end%>
</table>
</div>
