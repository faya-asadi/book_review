<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |msg|%>
    <li><%= msg%></li>
    <% end %>
  </ul>
  <%= @book.title%>
<% end %>



<%= form_for @book do |b|  %>
  <div style="margin-top: 20px;">
    <%= b.label :title %></label><br/>
    <%= b.text_field :title%>
  </div>

  <div style="margin-top: 20px;">
    <%= b.label :author %></label><br/>
    <%= b.text_field :author%>
  </div>

  <div style="margin-top: 20px;">
    <%= b.submit%>
  </div>
<% end %>

<div style="margin-top: 50px;">
<%= link_to 'back to list of books', books_path%>
</div>
