<h1>Sing up for book review</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg|%>
    <li><%= msg%></li>
    <% end %>
  </ul>
<% end %>



<%= form_for @user  do |u| %>  <!--:as => :user, :url => signup_path(@user) do |u|  %-->
  <p>
    <%= u.label :username %></label><br/>
    <%= u.text_field :username%>
  </p>

  <p>
    <%= u.label :email %></label><br/>
    <%= u.email_field :email%>
  </p>

  <p>
    <%= u.label :password %></label><br/>
    <%= u.password_field :password%>
  </p>

  <p>
    <%= u.submit "sign up"%>
  </p>
<% end %>

<p>
<%= link_to 'back to list of books', books_path%>
</p>
