<table style=" width: 50%;">
  <tr>
    <th>User Name</th>
    <th>Email</th>
  </tr>
<%User.all.each do |u|%>
   <tr>
     <td> <%= u.username %></td>
     <td> <%= u.email%></td>

     <td> <%= link_to 'Display', user_path(u)%></td>
     <td>
      <%if logged_in? && (current_user == u || is_Admin_user?)  %>
         <%= link_to 'Edit', edit_user_path(u) %>
      <%end%>
      </td>
      <td>
      <%if is_Admin_user? %>
        <%= link_to 'Delete' , user_path(u), method: :delete, data: {confirm: 'Are you suire you want to delete this user?'} %>
      <%end%>
      </td>
   </tr>
<%end%>
</table>
